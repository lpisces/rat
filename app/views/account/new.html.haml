%fieldset
  %legend= I18n.t('sign_up.title')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
  = devise_error_messages_for_sign_up!
  .control-group{:class => ('error' unless resource.errors[:email].empty?)}
    = f.label :email , I18n.t('sign_up.email'), :class => 'control-label', :style => 'width:80px'
    .controls{:style => 'margin-left:100px;'}
      = f.email_field :email, :autofocus => true
      %span.help-inline= resource.errors[:email].first unless resource.errors[:email].empty?
  .control-group{:class => ('error' unless resource.errors[:password].empty?)}
    = f.label :password, I18n.t('sign_up.password'), :class => 'control-label', :style => 'width:80px'
    .controls{:style => 'margin-left:100px;'}
      = f.password_field :password
      %span.help-inline= resource.errors[:password].first unless resource.errors[:password].empty?
  .control-group{:class => ('error' unless resource.errors[:password_confirmation].empty?)}
    = f.label :password_confirmation, I18n.t('sign_up.password_confirmation'), :class => 'control-label', :style => 'width:80px'
    .controls{:style => 'margin-left:100px;'}
      = f.password_field :password_confirmation
      %span.help-inline= resource.errors[:password_confirmation].first unless resource.errors[:password_confirmation].empty?
  .control-group
    .controls{:style => 'margin-left:100px;'}
      = f.submit I18n.t('sign_up.submit'), :class => 'btn btn-mini btn-success'
= render "devise/shared/links"
